{% extends 'Client/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .cart-item {
            transition: all 0.3s ease;
            border-bottom: 1px solid #eee;
            padding: 1.5rem 0;
        }
        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .input-group-quantity {
            width: auto;
            flex-wrap: nowrap;
        }
        .quantity-input {
            width: 50px;
            text-align: center;
            margin: 0 0.5rem;
        }
        .btn-quantity {
            padding: 0.25rem 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">Votre Panier</h1>

        {% if commande.lignesCommande is empty %}
            <div class="alert alert-info">
                Votre panier est vide
            </div>
        {% else %}
            <div class="row">
                <div class="col-lg-8">
                    {% for ligne in commande.lignesCommande %}
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <img src="{{ ligne.livre.image|default('placeholder.jpg') }}"
                                         alt="{{ ligne.livre.titre }}"
                                         class="img-fluid rounded">
                                </div>
                                <div class="col-md-5">
                                    <h5>{{ ligne.livre.titre }}</h5>
                                    <p class="text-muted mb-1">{{ ligne.livre.auteur }}</p>
                                    <p class="text-success h5">{{ ligne.livre.prix }} €</p>
                                </div>
                                <div class="col-md-4">
                                    <div class="quantity-controls">
                                        <form method="post" action="{{ path('client_panier_modifier', {'id': ligne.id}) }}" class="d-flex align-items-center">
                                            <input type="hidden" name="_token" value="{{ csrf_token('modify' ~ ligne.id) }}">
                                            <div class="input-group input-group-quantity">
                                                <button type="button" class="btn btn-outline-secondary btn-quantity minus-btn">
                                                    <i class="bi bi-dash-lg"></i>
                                                </button>
                                                <input type="number"
                                                       name="quantite"
                                                       value="{{ ligne.quantite }}"
                                                       min="1"
                                                       class="form-control quantity-input">
                                                <button type="button" class="btn btn-outline-secondary btn-quantity plus-btn">
                                                    <i class="bi bi-plus-lg"></i>
                                                </button>
                                            </div>
                                            <a href="{{ path('client_panier_supprimer', {'id': ligne.id}) }}"
                                               class="btn btn-danger ms-2"
                                               title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="col-lg-4">
                    <div class="total-section">
                        <h4 class="mb-4">Récapitulatif</h4>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total articles :</span>
                            <span>{{ commande.total }} €</span>
                        </div>
                        <a href="#" class="btn btn-primary w-100 btn-lg">Valider la commande</a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.plus-btn, .minus-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const input = this.closest('.input-group-quantity').querySelector('.quantity-input');
                    let value = parseInt(input.value);

                    if (this.classList.contains('plus-btn')) {
                        value++;
                    } else {
                        value = Math.max(1, value - 1);
                    }

                    input.value = value;
                    this.closest('form').submit();
                });
            });
        });
    </script>
{% endblock %}