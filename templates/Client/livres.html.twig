{% extends 'Client/base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .card-custom {
            height: 100%;
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.2s ease-in-out;
        }
        .card-custom:hover {
            transform: scale(1.02);
        }
        .card-img-top {
            height: 250px;
            object-fit: cover;
        }
        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #343a40;
        }
        .card-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }
        .btn-custom {
            font-size: 0.9rem;
            padding: 6px 12px;
            border-radius: 6px;
        }
    </style>
{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
        <a class="navbar-brand" href="#">Vitrine Livres</a>
        <div class="container mt-3">
            <div class="search-bar">
                <form class="d-flex" method="get">
                    <select name="filterBy" class="form-select me-2">
                        <option value="titre">Titre</option>
                        <option value="auteur">Auteur</option>
                        <option value="categorie">Catégorie</option>
                    </select>
                    <input name="search" type="text" class="form-control me-2" placeholder="Rechercher...">
                    <button class="btn btn-outline-primary" type="submit">Rechercher</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            {% for livre in livres %}
                <div class="col-md-4 mb-4 d-flex">
                    <div class="card card-custom shadow-sm flex-fill">
                        <img class="card-img-top" src="{{ livre.image|default('placeholder.jpg') }}" alt="{{ livre.titre }}">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ livre.titre }}</h5>
                            <p class="text-muted mb-2">{{ livre.auteur|default('Auteur inconnu') }}</p>
                            <div class="card-buttons mt-auto">
                                <a href="{{ path('app_livres_show', {'id': livre.id}) }}" class="btn btn-primary btn-custom">
                                    <i class="bi bi-eye"></i> Voir Détail
                                </a>
                                <button class="btn btn-secondary btn-custom"> <i class="bi bi-cart-plus"></i>Ajouter au panier</button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(livres) }}
    </div>
{% endblock %}