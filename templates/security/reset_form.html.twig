{% extends 'SignLayout.html.twig' %}

{% block title %}Créer un nouveau mot de passe{% endblock %}

{% block body %}
    <div class="glass-card">
        <h2>Créer un nouveau mot de passe</h2>

        {{ form_start(form) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}
        <button class="btn btn-primary mt-3" type="submit">Valider</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
