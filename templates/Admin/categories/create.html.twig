{% extends 'Admin/base.html.twig' %}

{% block title %}{{ mode == 'edit' ? 'Modifier une Catégorie' : 'Ajouter une nouvelle Catégorie' }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="card shadow p-4">
            <h2 class="text-2xl font-bold text-gray-800">
                <i class="bi {{ mode == 'edit' ? 'bi-pencil-square' : 'bi-plus-circle' }} me-2"></i>
                {{ mode == 'edit' ? 'Modifier une Catégorie' : 'Ajouter une nouvelle Catégorie' }}
            </h2><br>

            {{ form_start(f, {'attr': {'class': 'row g-3'}}) }}
            <div class="col-md-6">
                {{ form_row(f.libelle, {'label': 'Libellé'}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(f.slug) }}
            </div>
            <div class="col-md-12">
                {{ form_row(f.description, {'label': 'Description'}) }}
            </div>

            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-2"></i>Enregistrer
                </button>
            </div>
            {{ form_end(f) }}
        </div>
    </div>
{% endblock %}