{# livres/index.html.twig #}
{% extends 'Admin/base.html.twig' %}

{% block title %}Gestion des Livres{% endblock %}

{% block body %}
    <div class="table-container p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0 text-primary"><i class="bi bi-book me-2"></i>Gestion des Livres</h2>
            <a href="{{ path('app_livres_create') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Ajouter un livre
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th style="color: #304357">Couverture</th>
                    <th  style="color: #304357">Titre</th>
                    <th  style="color: #304357">Auteur</th>
                    <th  style="color: #304357">Editeur</th>
                    <th  style="color: #304357">Date d'édition</th>
                    <th  style="color: #304357">Prix</th>
                    <th  style="color: #304357">Stock</th>
                    <th  style="color: #304357"> Catégorie</th>
                    <th class="text-center"  style="color: #304357">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for livre in livres %}
                    <tr class="position-relative">
                        <td>
                            <img src="{{livre.image}}"
                                 class="rounded shadow"
                                 style="width: 60px; height: 80px; object-fit: cover">
                        </td>
                        <td class="fw-bold">{{ livre.titre }}</td>
                        <td>{{ livre.auteur }}</td>
                        <td>{{ livre.editeur }}</td>
                        <td>{{ livre.dateedition|date('d M, Y') }}</td>
                        <td>{{ livre.prix }} DT</td>
                        <td>
                        <span class="badge bg-{{ livre.stock > 5 ? 'success' : 'warning' }}">
                            {{ livre.stock }} disponibles
                        </span>
                        </td>
                        <td>
                            <span class="badge bg-primary">{{ livre.categorie.libelle }}</span>
                        </td>
                        <td class="text-end">
                            <div class="d-inline-flex gap-2">
                                <a href="{{ path('app_livres_show', {'id': livre.id}) }}"
                                   class="btn btn-sm btn-outline-primary action-btn"
                                   data-bs-toggle="tooltip"
                                   title="Voir détails">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ path('app_livres_update', {'id': livre.id}) }}"
                                   class="btn btn-sm btn-outline-success action-btn"
                                   data-bs-toggle="tooltip"
                                   title="Modifier">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="{{ path('app_livres_delete', {'id': livre.id}) }}"
                                   class="btn btn-sm btn-outline-danger action-btn"
                                   data-bs-toggle="tooltip"
                                   title="Supprimer"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(livres) }}
        </div>
    </div>
{% endblock %}