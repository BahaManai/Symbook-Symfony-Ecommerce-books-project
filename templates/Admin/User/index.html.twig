{% extends 'Admin/base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="table-container p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0 text-primary"><i class="bi bi-people me-2"></i>Gestion des Utilisateurs</h2>
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Ajouter un utilisateur
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                <tr>
                    <th style="color: #304357">ID</th>
                    <th style="color: #304357">Email</th>
                    <th style="color: #304357">Nom</th>
                    <th style="color: #304357">Prénom</th>
                    <th style="color: #304357">Adresse</th>
                    <th style="color: #304357">Téléphone</th>
                    <th style="color: #304357">Rôle</th>
                    <th style="color: #304357">Vérifié</th>
                    <th class="text-center" style="color: #304357">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.adresse|default('-') }}</td>
                        <td>{{ user.telephone|default('-') }}</td>
                        <td>
                            <span class="badge bg-{{ 'ROLE_ADMIN' in user.roles ? 'primary' : 'info' }}">
                                <i class="bi {{ 'ROLE_ADMIN' in user.roles ? 'bi-shield-lock' : 'bi-person' }} me-1"></i>
                                {{ 'ROLE_ADMIN' in user.roles ? 'Administrateur' : 'Client' }}
                            </span>
                        </td>

                        <td>
                            <span class="badge bg-{{ user.isVerified ? 'success' : 'danger' }}">
                                <i class="bi {{ user.isVerified ? 'bi-check-circle' : 'bi-x-circle' }}"></i>
                                {{ user.isVerified ? 'Vérifié' : 'Non vérifié' }}
                            </span>
                        </td>

                        <td class="text-end">
                            <div class="d-inline-flex gap-2">
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                   class="btn btn-sm btn-outline-success action-btn"
                                   data-bs-toggle="tooltip"
                                   title="Modifier">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <form method="post"
                                      action="{{ path('app_user_delete', {'id': user.id}) }}"
                                      onsubmit="return confirm('Supprimer cet utilisateur ?');"
                                      style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-sm btn-outline-danger action-btn" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted">Aucun utilisateur trouvé.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
