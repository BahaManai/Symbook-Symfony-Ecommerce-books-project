<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SymBook Admin{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap');
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f8f5f0;
        }
    </style>
    {% block stylesheets %}
    {% endblock %}
</head>
<body class="flex h-screen bg-gray-50">
<!-- Sidebar -->
<div class="sidebar w-64 fixed h-full text-white hidden md:block bg-gradient-to-br from-gray-800 to-gray-900">
    <div class="p-4 flex items-center space-x-3 border-b border-gray-700">
        <div class="w-10 h-10 rounded-full bg-yellow-500 flex items-center justify-center">
            <i class="fas fa-book text-white text-lg"></i>
        </div>
        <h1 class="text-xl font-bold">SymBook Admin</h1>
    </div>
    <div class="p-4">
        <ul class="space-y-2">
            <li class="nav-item {{ app.request.get('_route') starts with 'app_livres' ? 'bg-gray-700 border-l-4 border-yellow-400' : '' }} rounded-lg">
                <a href="{{ path('app_livres') }}" class="flex items-center p-3 space-x-3">
                    <i class="fas fa-book text-yellow-400"></i>
                    <span>Livres</span>
                </a>
            </li>
            <li class="nav-item {{ app.request.get('_route') starts with 'admin_categories' ? 'bg-gray-700 border-l-4 border-blue-400' : '' }} rounded-lg">
                <a href="{{ path('admin_categories') }}" class="flex items-center p-3 space-x-3">
                    <i class="fas fa-tags text-blue-300"></i>
                    <span>Cat√©gories</span>
                </a>
            </li>
            <li class="nav-item rounded-lg">
                <a href="#" class="flex items-center p-3 space-x-3">
                    <i class="fas fa-shopping-cart text-purple-300"></i>
                    <span>Commandes</span>
                </a>
            </li>
            <li class="nav-item {{ app.request.get('_route') starts with 'app_user' ? 'bg-gray-700 border-l-4 border-green-400' : '' }} rounded-lg">
                <a href="{{ path('app_user_index') }}" class="flex items-center p-3 space-x-3">
                    <i class="fas fa-users text-green-300"></i>
                    <span>Utilisateurs</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="absolute bottom-0 w-full p-4 border-t border-gray-700">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 rounded-full bg-gray-600 flex items-center justify-center">
                <i class="fas fa-user text-sm"></i>
            </div>
            <div>
                <p class="text-sm font-medium">Admin</p>
                <p class="text-xs text-gray-400">Administrateur</p>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<div class="flex-1 md:ml-64 p-6">
    {% for type, messages in app.flashes %}
        <div class="bg-{{ type == 'success' ? 'green' : 'red' }}-100 border border-{{ type == 'success' ? 'green' : 'red' }}-400 text-{{ type == 'success' ? 'green' : 'red' }}-700 px-4 py-3 rounded relative mb-4">
            <strong class="font-bold">{{ type|capitalize }}!</strong>
            <span class="block sm:inline">{{ messages[0] }}</span>
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</div>

{% block javascripts %}{% endblock %}
</body>
</html>
